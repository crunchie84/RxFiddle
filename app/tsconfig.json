{
  "compileOnSave": true,
  "compilerOptions": {
    "sourceMap": true,
    "outDir": "dist",
    "module": "commonjs",
    "typeRoots": [
      "node_modules/@types/"
    ],
    "types": [
      "node",
      "electron"
    ],
    "target": "ES6",
    "jsx": "preserve",
    "strictNullChecks": false,
    "removeComments": false,
    "noImplicitAny": true,
    "experimentalDecorators": true,
    "declaration": true,
    "preserveConstEnums": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*",
    "src/*",
    "test/**/*",
    "test/*",
    "node_modules/rx"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}